@model HotelReservation.Areas.FrontDesk.ViewModels.EditReservationViewModel

@{
    ViewData["Title"] = "Edit Reservation";
}

<h2>Edit Reservation</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReservationId" />

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<HotelReservation.Models.ReservationStatus>()">
            <option value="">-- Select Status --</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsPaid" class="form-check-input" />
        <label asp-for="IsPaid" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
