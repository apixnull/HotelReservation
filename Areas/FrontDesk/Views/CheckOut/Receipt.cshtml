@model HotelReservation.Models.Reservation

@{
    ViewData["Title"] = "Receipt";
}

<div class="container mt-4">
    <div class="text-center mb-3">
        <h4 class="fw-bold">Hotel Stay Receipt</h4>
    </div>

    <div class="card shadow-sm p-4" style="max-width: 600px; margin: auto;">
        <div class="text-center mb-3">
            <h5 class="fw-bold">@Model.GuestName</h5>
            <p class="text-muted mb-0">@Model.GuestEmail</p>
            <p class="text-muted">@Model.GuestPhone</p>
        </div>

        <hr />

        <div class="mb-3">
            <p class="mb-1"><strong>Booking Reference:</strong> @Model.BookingReference</p>
            <p class="mb-1"><strong>Room Number:</strong> @(Model.Room?.RoomNumber ?? "N/A")</p>
            <p class="mb-1"><strong>Check-In:</strong> @Model.CheckInDate.ToString("MMM dd, yyyy")</p>
            <p class="mb-1"><strong>Check-Out:</strong> @Model.CheckOutDate.ToString("MMM dd, yyyy")</p>
            <p><strong>Actual Check-Out:</strong> @(Model.ActualCheckOut?.ToString("MMM dd, yyyy hh:mm tt") ?? "N/A")</p>
        </div>

        <hr />

        <div class="text-center mb-3">
            <h5 class="fw-bold">Total: $@Model.TotalPrice</h5>
            <p class="text-muted">Paid: <strong>@(Model.IsPaid ? "Yes" : "No")</strong></p>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-area="FrontDesk" asp-controller="CheckOut" asp-action="Index" class="btn btn-secondary">⬅ Back</a>
            <button onclick="window.print()" class="btn btn-primary">🖨 Print</button>
        </div>
    </div>
</div>
