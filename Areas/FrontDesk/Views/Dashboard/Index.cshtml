@{
    ViewData["Title"] = "Front Desk Dashboard";
}

<div class="container mt-4">
    <h2>Welcome to Front Desk Dashboard</h2>
    <p>Here you can manage check-ins, check-outs, and handle reservations.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Pending Check-Ins</div>
                <div class="card-body">
                    <h5 class="card-title">5</h5>
                    <p class="card-text">Guests waiting for check-in.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Checked-In Guests</div>
                <div class="card-body">
                    <h5 class="card-title">12</h5>
                    <p class="card-text">Guests currently staying.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Upcoming Check-Outs</div>
                <div class="card-body">
                    <h5 class="card-title">8</h5>
                    <p class="card-text">Guests scheduled to check-out today.</p>
                </div>
            </div>
        </div>
    </div>
</div>
