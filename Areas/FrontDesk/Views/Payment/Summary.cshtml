@model HotelReservation.Areas.FrontDesk.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Reservation Summary";
}

<h2>Reservation Summary</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4>Booking Reference: @Model.BookingReference</h4>
    </div>
    <div class="card-body">
        <p><strong>Guest Name:</strong> @Model.GuestName</p>
        <p><strong>Total Amount Paid:</strong> ₱@Model.TotalAmount</p>
        <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
        <p><strong>Check-in Date:</strong> @Model.CheckInDate.ToString("MMMM dd, yyyy")</p>
        <p><strong>Check-out Date:</strong> @Model.CheckOutDate.ToString("MMMM dd, yyyy")</p>
        <p><strong>Room Number:</strong> @Model.RoomNumber</p>

        <h5 class="mt-4">Room Images:</h5>
        <img src="@Model.RoomImage1" class="img-thumbnail" width="200" alt="Room Image">

        <br /><br />

        <a asp-action="Index" asp-controller="Reservations" class="btn btn-secondary">Back to Reservations</a>
    </div>
</div>
