@model HotelReservation.Areas.FrontDesk.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment Successful";
}

<h2>Payment Successful!</h2>

<p>Thank you, <strong>@Model.GuestName</strong>. Your payment has been received.</p>
<p>Booking Reference: <strong>@Model.BookingReference</strong></p>
<p>Total Amount Paid: <strong>₱@Model.TotalAmount</strong></p>

<p>
    <a asp-action="Summary" asp-controller="Payment" asp-route-id="@Model.ReservationId" class="btn btn-primary">
        View Reservation Summary
    </a>
    <a asp-action="Index" asp-controller="Reservations" class="btn btn-secondary">
        Back to Manage Reservations
    </a>
</p>
