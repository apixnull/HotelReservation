@model HotelReservation.Areas.FrontDesk.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Select Payment Method";
}

<h2>Select Payment Method</h2>

<p>Booking Reference: <strong>@Model.BookingReference</strong></p>
<p>Guest Name: <strong>@Model.GuestName</strong></p>
<p>Total Amount: <strong>₱@Model.TotalAmount</strong></p>

<form asp-action="SelectPaymentMethod" method="post">
    <input type="hidden" asp-for="ReservationId" />

    <label>
        <input type="radio" asp-for="PaymentMethod" value="Cash" /> Pay with Cash
    </label>
    <br />
    <label>
        <input type="radio" asp-for="PaymentMethod" value="GCash" /> Pay with GCash
    </label>
    <br />

    <button type="submit" class="btn btn-primary">Proceed</button>
</form>
