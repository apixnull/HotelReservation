@model HotelReservation.Areas.FrontDesk.ViewModels.ReportsViewModel

@{
    ViewData["Title"] = "Reports";
}

<h2>Reports</h2>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-header">Total Reservations</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TotalReservations</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Today's Check-Ins</div>
            <div class="card-body">
                <h5 class="card-title">@Model.TodaysCheckIns</h5>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-header">Today's Revenue</div>
            <div class="card-body">
                <h5 class="card-title">₱@Model.TodaysRevenue</h5>
            </div>
        </div>
    </div>
</div>
