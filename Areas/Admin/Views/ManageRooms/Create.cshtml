@model HotelReservation.Areas.Admin.ViewModels.CreateRoomViewModel

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-4">
    <h2 class="mb-4">Create New Room</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="RoomNumber" class="form-label">Room Number</label>
                    <input asp-for="RoomNumber" class="form-control" placeholder="Enter Room Number" />
                    <span class="text-danger" asp-validation-for="RoomNumber"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoomType" class="form-label">Room Type</label>
                    <select asp-for="RoomType" class="form-select">
                        <option value="">Select Room Type</option>
                        <option value="Standard">Standard</option>
                        <option value="Deluxe">Deluxe</option>
                        <option value="Suite">Suite</option>
                    </select>
                    <span class="text-danger" asp-validation-for="RoomType"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MaxOccupancy" class="form-label">Max Occupancy</label>
                    <input asp-for="MaxOccupancy" class="form-control" />
                    <span class="text-danger" asp-validation-for="MaxOccupancy"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" type="number" class="form-control" placeholder="Enter Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="">Select Status</option>
                        <option value="Available">Available</option>
                        <option value="Booked">Booked</option>
                        <option value="Maintenance">Maintenance</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Status"></span>
                </div>

                <!-- ✅ Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Room Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter room details" rows="3"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>

                <!-- ✅ Room Images -->
                <div class="mb-3">
                    <label asp-for="Image1" class="form-label">Room Image 1</label>
                    <input asp-for="Image1" type="file" class="form-control" accept="image/*" />
                    <span class="text-danger" asp-validation-for="Image1"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Image2" class="form-label">Room Image 2</label>
                    <input asp-for="Image2" type="file" class="form-control" accept="image/*" />
                    <span class="text-danger" asp-validation-for="Image2"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success" id="createUserButton">Create Room</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to Rooms</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const createButton = document.getElementById("createUserButton");

            if (createButton) {
                createButton.addEventListener("click", function (event) {
                    event.preventDefault(); // Prevent form submission

                    Swal.fire({
                        title: "Are you sure?",
                        text: "Do you want to create this room?",
                        icon: "info",
                        showCancelButton: true,
                        confirmButtonColor: "#198754",
                        cancelButtonColor: "#6c757d",
                        confirmButtonText: "Yes, create!"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            createButton.closest("form").submit(); // Submit the form
                        }
                    });
                });
            }
        });
    </script>

}
