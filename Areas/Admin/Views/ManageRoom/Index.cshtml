@model IEnumerable<HotelReservation.Models.Room>

@{
    ViewData["Title"] = "Manage Rooms";
}

<!-- ✅ CSS for Styling the Manage Rooms Page -->
<style>
    /* ✅ General Styling */
    body {
        background: #f8f5f0; /* Soft luxury background */
        color: #333;
        font-family: 'Inter', sans-serif;
    }

    /* ✅ Page Title */
    h2 {
        font-family: 'Playfair Display', serif;
        color: #2c3e50;
    }

    /* ✅ Buttons */
    .btn {
        border-radius: 6px;
        padding: 8px 12px;
        font-weight: 600;
        transition: 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #d4a373 !important;
        border: none;
        color: white;
    }

        .btn-primary:hover {
            background-color: #b58346 !important;
            transform: scale(1.05);
        }

    .btn-warning {
        background-color: #e9b44c !important;
        color: white;
    }

        .btn-warning:hover {
            background-color: #d89a3a !important;
        }

    .btn-danger {
        background-color: #dc3545 !important;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333 !important;
        }

    /* ✅ Table Styling */
    .table {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

        .table thead {
            background: #2c3e50;
            color: white;
        }

        .table th, .table td {
            padding: 12px;
            text-align: center;
        }

    /* ✅ Badge Styling */
    .badge {
        font-size: 0.8rem;
        padding: 5px 10px;
        border-radius: 6px;
    }

    /* ✅ Alerts */
    .alert {
        border-radius: 6px;
        padding: 12px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }
</style>

<!-- ✅ Page Title -->
<h2 class="mb-4">Manage Rooms</h2>

<!-- ✅ Success & Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- ✅ Create New Room Button -->
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Room</a>
</p>

<!-- ✅ Room Management Table -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Room Type</th>
            <th>Price per Night</th>
            <th>Status</th>
            <th>Description</th>
            <th>Amenities</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.RoomType</td>
                <td>@room.Price.ToString("C")</td>
                <td>@room.Status</td>
                <td>@room.Description</td>
                <td>@room.Amenities</td>
                <td>
                    <span class="badge bg-secondary">@room.Images?.Count() images</span>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@room.RoomId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@room.RoomId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
