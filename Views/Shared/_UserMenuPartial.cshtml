@{
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var email = User.Identity?.Name ?? "Guest";

    // Retrieve profile picture from claims, fallback to default
    var profilePictureUrl = User.Claims.FirstOrDefault(c => c.Type == "ProfilePicture")?.Value ?? "/images/default-profile.png";
}

<div class="user-menu">
    @if (isAuthenticated)
    {
        <div class="dropdown">
            <a class="dropdown-toggle d-flex align-items-center text-decoration-none text-dark" href="#" id="userMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="@profilePictureUrl" alt="Profile Picture" class="rounded-circle border" style="width: 40px; height: 40px; object-fit: cover;">
                <span class="ms-2 fw-semibold">@email</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userMenuLink">
                <li>
                    <a class="dropdown-item d-flex align-items-center" href="/Profile/Manage">
                        <i class="bi bi-person-circle me-2"></i> Manage Profile
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" href="/Notification">
                        <i class="bi bi-bell me-2"></i> Notifications
                    </a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        <button type="submit" class="dropdown-item d-flex align-items-center">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    }
    else
    {
        <div class="auth-links d-flex gap-2">
            <a class="btn btn-outline-primary btn-sm" href="/Auth/Login">Login</a>
            <a class="btn btn-primary btn-sm" href="/Auth/Register">Register</a>
        </div>
    }
</div>
