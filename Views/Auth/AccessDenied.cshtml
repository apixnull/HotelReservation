<style>
    /* ✅ Centered Page Styling */
    .access-denied-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .access-denied-card {
        width: 420px;
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
        animation: fadeIn 0.4s ease-in-out;
    }

    .access-denied-icon {
        font-size: 60px;
        color: #dc3545;
        margin-bottom: 10px;
        animation: shake 0.5s ease-in-out;
    }

    .access-denied-title {
        font-size: 22px;
        font-weight: bold;
        color: #dc3545;
    }

    .access-denied-text {
        font-size: 16px;
        color: #6c757d;
        margin-bottom: 20px;
    }

    .access-denied-btn {
        padding: 10px 18px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }

        .access-denied-btn:hover {
            transform: scale(1.05);
        }

</style>

@{
    ViewData["Title"] = "Access Denied";
}

<div class="access-denied-container">
    <div class="access-denied-card">
        <i class="bi bi-exclamation-triangle-fill access-denied-icon"></i>
        <h2 class="access-denied-title">Access Denied</h2>
        <p class="access-denied-text">You do not have permission to access this page.</p>
        <a class="btn btn-primary access-denied-btn" href="/">Go to Home</a>
    </div>
</div>
