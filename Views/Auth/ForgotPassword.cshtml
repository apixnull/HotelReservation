@model HotelReservation.ViewModels.ForgotPasswordViewModel

@{
    Layout = "_AuthLayout";
}

<!-- Forgot Password Form -->
<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="/authAsset/images/signin-image.jpg" alt="sing up image"></figure>
            </div>
            <div class="signin-form">
                <h2 class="form-title">Forgot Password</h2>
                <form asp-action="ForgotPassword"  method="POST" class="register-form" id="login-form">
                    <div class="form-group">
                        <label asp-for="Email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="Email" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                   
                    <div class="form-group form-button">
                        <input type="submit" class="form-submit" value="Send Reset Link"/>
                    </div>
                    <br>
                    <div class="form-group">
                        <a asp-area="" asp-controller="Auth" asp-action="Login" class="forgot-password-link">Back to Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

