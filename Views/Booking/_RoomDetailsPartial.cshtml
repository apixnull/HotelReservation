@model HotelReservation.Models.Room

<div class="row">
    <!-- ✅ Room Images -->
    <div class="col-md-6">
        <img src="@Model.Image1" class="img-fluid w-100 rounded mb-2 shadow-sm" style="max-height: 350px; object-fit: cover;" alt="Room Image">
        @if (!string.IsNullOrEmpty(Model.Image2))
        {
            <img src="@Model.Image2" class="img-fluid w-100 rounded shadow-sm" style="max-height: 350px; object-fit: cover;" alt="Room Image">
        }
    </div>

    <!-- ✅ Room Info -->
    <div class="col-md-6">
        <h4 class="fw-bold">@Model.RoomType</h4>
          
        <!-- ⭐ Star Rating -->
        <p class="text-warning mb-2">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="far fa-star"></i> <span class="text-muted">(4.0)</span>
        </p>

        <p><strong>Room Number:</strong> <span class="text-muted">@Model.RoomNumber</span></p>
        <p><strong>Price:</strong> <span class="text-success fw-bold">@Model.Price.ToString("C") per night</span></p>
        <p><strong>Status:</strong> <span class="badge bg-info text-dark">@Model.Status</span></p>
        <p><strong>Description:</strong> <span class="text-muted">@Model.Description</span></p>
        <p><strong>Max Occupancy:</strong> <span class="text-muted">@Model.MaxOccupancy</span></p>

        <!-- ✅ Book Now Button -->
        <div class="d-grid gap-2 mt-3">
            <a asp-action="Book" asp-route-id="@Model.RoomId" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-check"></i> Book Now
            </a>
        </div>
    </div>
</div>
