@model List<HotelReservation.Models.Reservation>

@{
    ViewData["Title"] = "My Booking(s)";
}

<div class="container mt-4">
    <h2>Your Bookings</h2>

    @if (Model.Count == 0)
    {
        <p>No reservations found.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Booking Reference</th>
                    <th>Check-in</th>
                    <th>Check-out</th>
                    <th>Room</th>
                    <th>Status</th>
                    <th>Paid</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var res in Model)
                {
                    <tr>
                        <td>@res.BookingReference</td>
                        <td>@res.CheckInDate.ToString("MMM dd, yyyy")</td>
                        <td>@res.CheckOutDate.ToString("MMM dd, yyyy")</td>
                        <td>@(res.Room != null ? res.Room.RoomNumber : "N/A")</td>
                        <td>@res.Status</td>
                        <td>@(res.IsPaid ? "Yes" : "No")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
