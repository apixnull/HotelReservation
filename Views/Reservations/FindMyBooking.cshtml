@{
    ViewData["Title"] = "Find My Booking";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="w-100" style="max-width: 500px;">
        <h2 class="text-center mb-4">Find My Booking</h2>
        <p class="text-center">Enter your email and booking reference to view your reservation details.</p>
        <form method="post" asp-action="FindMyBooking">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" name="email" required>
            </div>
            <div class="mb-3">
                <label for="bookingReference" class="form-label">Booking Reference</label>
                <input type="text" class="form-control" name="bookingReference" required>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Find Booking</button>
            </div>
        </form>
    </div>
</div>
